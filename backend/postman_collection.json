{
  "info": {
    "name": "Martins Tech API",
    "_postman_id": "martins-tech-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@martins.tech\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Get Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Create Product (multipart)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "name",
              "value": "Teste Product",
              "type": "text"
            },
            {
              "key": "price",
              "value": "1000",
              "type": "text"
            },
            {
              "key": "category",
              "value": "aparelho",
              "type": "text"
            },
            {
              "key": "stores",
              "value": "[]",
              "type": "text"
            },
            {
              "key": "colors",
              "value": "[\"Preto\"]",
              "type": "text"
            },
            {
              "key": "images",
              "type": "file"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Get Stores",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/stores",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "stores"
          ]
        }
      }
    }
  ]
}